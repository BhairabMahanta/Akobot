{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error", 
            "double", 
            { "allowTemplateLiterals": true }
        ],

        "semi": [
            "error",
            "always"
        ]
    }
}
